---
import '../styles/global.css';
import Header from '../components/Header.astro';
import SocialLinks from '../components/SocialLinks.astro';
import AdditionalLinks from '../components/AdditionalLinks.astro';

const socialLinks = [
  { label: 'github', href: 'https://github.com/franciscovieirawork-hub' },
  { label: 'x', href: 'https://twitter.com/chicao_nft' },
  { label: 'linkedin', href: 'https://pt.linkedin.com/in/franciscovieirafront' },
];

const additionalLinks = [
  { label: 'Portfolio', href: '/' },
  { label: 'Blog', href: '/blog' },
  { label: 'Projects', href: '/projects' },
  { label: 'Contact', href: '/contact' },
];
---

<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>FVDev - Portfolio</title>
    <meta name="description" content="FVDev - Builds things" />
  </head>
  <body>
    <main>
      <div class="content-wrapper">
        <Header />
        <SocialLinks links={socialLinks} />
        <AdditionalLinks links={additionalLinks} />
      </div>
    </main>
  </body>
</html>

<style is:global>
  main {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .content-wrapper {
    align-items: start;
  }
</style>
