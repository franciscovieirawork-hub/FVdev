---
interface Props {
  links: Array<{ label: string; href: string }>;
}

const { links } = Astro.props;
---

<div class="container">
  <div class="content">
    <h2 class="title">my Socials</h2>
    <nav class="nav">
      {links.map((link) => (
        <a
          href={link.href}
          target="_blank"
          rel="noopener noreferrer"
          class="link"
        >
          [{link.label}]
        </a>
      ))}
    </nav>
  </div>
</div>

<style>
  .container {
    padding: 30px 20px;
  }

  .content {
    max-width: 800px;
    margin: 0 auto;
  }

  .title {
    font-size: 1rem;
    font-weight: 600;
    letter-spacing: 0.02em;
    margin-bottom: 20px;
    color: #cccccc;
    text-transform: uppercase;
  }

  .nav {
    display: flex;
    gap: 30px;
    flex-wrap: wrap;
  }

  .link {
    color: #ffffff;
    text-decoration: none;
    font-size: 0.95rem;
    letter-spacing: 0.01em;
    transition: all 0.2s ease;
    border-bottom: 1px solid transparent;
  }

  .link:hover {
    border-bottom: 1.3px solid #cfff04;
    opacity: 1;
  }

  @media (max-width: 640px) {
    .container {
      padding: 20px;
      margin-top: 20px;
    }

    .title {
      font-size: 0.9rem;
      margin-bottom: 15px;
    }

    .nav {
      gap: 15px;
    }

    .link {
      font-size: 0.85rem;
    }
  }
</style>

